<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="nl.svdoetelaar.madlevel3task1.StartFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/start_fragment">

        <action
            android:id="@+id/action_startFragment_to_ratingFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_placeholder"
            app:destination="@id/placeholder" />
        <action
            android:id="@+id/action_FirstFragment_to_summaryFragment"
            app:destination="@id/summaryFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="nl.svdoetelaar.madlevel3task1.RatingFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/rating_fragment">

        <action
            android:id="@+id/action_ratingFragment_to_startFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <SummaryFragment android:id="@+id/placeholder" >
        <action
            android:id="@+id/action_placeholder_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </SummaryFragment>
    <fragment
        android:id="@+id/summaryFragment"
        android:name="nl.svdoetelaar.madlevel3task1.SummaryFragment"
        android:label="fragment_summary"
        tools:layout="@layout/fragment_summary" >
        <action
            android:id="@+id/action_summaryFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
</navigation>